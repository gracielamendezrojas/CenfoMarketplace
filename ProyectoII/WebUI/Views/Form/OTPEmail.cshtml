@{ Layout = "~/Views/Shared/_LayoutDashBoard.cshtml"; }

@using WebUI.Models.Helpers;

<script src="~/Scripts/View/ControlActions.js"></script>
<script src="~/Scripts/View/UserFormEmail.js"></script>

@{ ViewBag.Title = "OTPEmail"; }


<style type="text/css">
    #btnOTPEmail {
        background-color: black;
        color: whitesmoke;
        margin-bottom: 4%;
        margin-top: 3%;
    }

    #btnNewOTPEmail {
        background-color: black;
        color: whitesmoke;
    }

    .notVisible {
        display: none;
    }

    .fullWidth .col-sm-10 {
        width: 100%;
    }

        .fullWidth .col-sm-10 input {
            padding-right: 0;
        }
</style>
<style type="text/css">
    .btn {
        background-color: black;
        color: white;
        margin-top: 3%;
    }
</style>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h2>@ViewBag.Message</h2>

<div id="pagina" class="OTP">
    <h2 style="text-align:center; margin-bottom:4%;margin-top:8%">An OTP has been sent to your email, please write it in the field!</h2>
    <div class="d-flex">
        <form id="frmOTPEmail" style="display:flex;flex-direction:column;justify-content:center;margin:auto;">
            <div class="fullWidth" style="margin-bottom: 3%;">
                @Html.CtrlInput("txtId", "text", "OTP", columnDataName: "OTPEmail")
            </div>
            <div style="margin-bottom:4%;">
                <span style="margin-bottom:4%; color:black;">The OTP is going to expire in: </span><span id="Count" sstyle="color:black;"></span>
            </div>
            </br>
            @Html.CtrlButton("UserFormEmail", "btnOTPEmail", "Verify and Continue", buttonType: "Success", onClickFunction: "VerifyOTPEmail")
            </br>
            @Html.CtrlButton("UserFormEmail", "btnNewOTPEmail", "Send new OTP", buttonType: "Success", onClickFunction: "SendEmailOTP")
        </form>
    </div>
</div>
