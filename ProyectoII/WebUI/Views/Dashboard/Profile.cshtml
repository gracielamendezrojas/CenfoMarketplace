@using WebUI.Models.Helpers;

@{
    ViewBag.Title = "Personal information";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div style="margin-left:10px">
    <h2 style="margin-top:20px">Personal information</h2>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <div class="profile-info">
        <div style="margin-top: 50px">
            <table>
                <tr>
                    <td>
                        <p><strong>Name:</strong></p>
                    </td>
                    <td>
                        <p id="nameProfile"> </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p><strong>Nickname:</strong></p>
                    </td>
                    <td>
                        <p id="nicknameProfile"> </p>
                    </td>

                </tr>
                <tr>
                    <td>
                        <p><strong>Email:</strong></p>
                    </td>
                    <td>
                        <p id="emailProfile"> </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p class="padding-right-profile"><strong>Phone Number:</strong></p>
                    </td>
                    <td>
                        <p id="phoneProfile"> </p>
                    </td>
                </tr>
            </table>
        </div>
        <div style="width: 200px; height:200px">
            <img style="max-width: 100%; max-height: 100%; " src="" id="avatar" />
        </div>
        <div style="width: 200px; height:200px">
            <button id="upload_widget_Update" type="button" class="btn btn-primary form-control">Change Profile image</button>
            @*@Html.CtrlInput("txtAvatarUpdate", "text", "Avatar", columnDataName: "Avatar")*@
        </div>
    </div>
    <div style="margin-top: 50px">

        <div class="flex-profile">

            <div>
                <h3>Update my profile</h3>

                <form id="userUpdate">

                    <div style="margin-bottom: 20px">
                        @Html.CtrlInput("nameUpdate", "text", "Name")
                        <p id="nameUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>
                        @Html.CtrlInput("lastNameUpdate", "text", "Last Name")
                        <p id="lastNameUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>
                        @Html.CtrlInput("nickNameUpdate", "text", "Nick name")
                        <p id="nickNameUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>
                        @*@Html.CtrlInput("phoneUpdate", "text", "Cellphone number")
                            <p id="phoneUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>
                            @Html.CtrlInput("emailUpdate", "text", "Email")
                            <p id="emailUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>*@
                        @*@Html.CtrlDatePicker("DBOUpdate", "date", "Date of Birth:", columnDataName: "DOB")
                            <p id="DBOUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>*@

                    </div>
                    <button id="updateBtn" type="button" class="btn btn-primary btn-flat m-b-30 m-t-30">Update</button>
                </form>
            </div>
            <div>
                <h3>Update my password</h3>

                <form id="passwordUpdateForm">

                    <div style="margin-bottom: 20px">
                        @Html.CtrlInput("passwordUpdate", "password", "New Password")
                        <p id="passwordUpdateFeedback" class="hidden color-red">This field cannot be empty.</p>

                        @Html.CtrlInput("passwordUpdateConfirmation", "password", "New Password Confirmation")
                        <p id="passwordConfirmationUpdateFeedback" class="hidden color-red">This field must match the field above.</p>

                        @Html.CtrlInput("currentPassword", "password", "Current Password")

                        <p id="currentPasswordFeedback" class="hidden color-red">This field cannot be empty.</p>

                        <input type="checkbox" id="checkPassUpdate"> <label style="font-size: 0.8rem;">Show password</label>

                    </div>

                    <button id="updatePasswordBtn" type="button" class="btn btn-primary btn-flat m-b-30 m-t-30">Update Password</button>
                </form>
            </div>


        </div>

    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/View/ControlActions.js"></script>
<script src="~/Scripts/View/Profile.js"></script>
